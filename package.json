{
  "name": "dappstore",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:e2e": "hardhat run scripts/test-e2e.js --network localhost",
    "deploy:local": "hardhat ignition deploy ignition/modules/AppStore.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/AppStore.ts --network sepolia",
    "verify:sepolia": "hardhat ignition verify AppStoreModule --network sepolia",
    "node": "hardhat node --hostname 0.0.0.0",
    "update-subgraph": "node scripts/update-subgraph-address.js",
    "copy-deployments": "node scripts/copy-deployments.js",
    "deploy:full": "npm run deploy:local && npm run update-subgraph && npm run copy-deployments"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-ignition-viem": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-node-test-runner": "^3.0.7",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-viem": "^3.0.1",
    "@nomicfoundation/hardhat-viem-assertions": "^3.0.4",
    "@types/node": "^22.19.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.15",
    "typescript": "~5.8.0",
    "viem": "^2.39.3"
  },
  "dependencies": {
    "@graphprotocol/graph-ts": "^0.38.2",
    "@helia/unixfs": "^6.0.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "helia": "^6.0.11",
    "ipfs-http-client": "^60.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "vite": "^6.4.1",
    "workbox-cli": "^7.4.0",
    "workbox-window": "^7.4.0"
  }
}

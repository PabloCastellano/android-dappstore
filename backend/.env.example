# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# ===================================
# FILECOIN CONFIGURATION
# ===================================
# Network: 'calibration' or 'mainnet'
FILECOIN_NETWORK=calibration

# Private key for backend wallet (used for uploads)
# SECURITY: This wallet pays for uploads, keep it secure!
# Generate a new wallet: 
# - Use MetaMask or create with: node -e "console.log(require('ethers').Wallet.createRandom().privateKey)"
# - Fund it with USDFC tokens from: https://forest-explorer.chainsafe.dev/faucet/calibnet_usdfc
FILECOIN_PRIVATE_KEY=your_private_key_here_without_0x_prefix

